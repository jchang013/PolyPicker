<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseDetails">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/coursedet" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/coursedet" />

        <TextView
            android:id="@+id/lbCourseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/img"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/img"
            android:layout_marginEnd="94dp"
            android:layout_marginLeft="95dp"
            android:layout_marginRight="94dp"
            android:layout_marginStart="95dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/roboto_black"
            android:text="CourseName"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="38sp" />

        <TextView
            android:id="@+id/lbCourseCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lbPoly"
            android:layout_centerHorizontal="true"
            android:text="(S53)"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbPoly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:text="Singapore Polytechnic"
            android:textAlignment="center"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbSchoolName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbPoly"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-25dp"
            android:text="School Name"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/lbL1R4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/btnMoreDet"
        android:text="L1R4 Cut-Off: 15"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />

    <TextView
        android:id="@+id/lbCourseDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lbL1R4"
        android:layout_below="@+id/lbL1R4"
        android:text="Course Description"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbL1R4" />

    <Button
        android:id="@+id/btnMoreDet"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:background="@drawable/buttonshape"
        android:padding="0dp"
        android:text="More Details"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textCourseDesc"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:layout_alignLeft="@+id/lbL1R4"
        android:layout_below="@+id/lbCourseDesc"
        android:text="LOREM IPSUM"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="16sp"
        tools:layout_width="380dp" />
</RelativeLayout>