<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:paddingLeft="10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="135dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:padding="5dp"
        app:cardBackgroundColor="@android:color/transparent"
        card_view:cardCornerRadius="25dp">

        <RelativeLayout
            android:layout_width="369dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/bg_card"
            android:padding="5dp">

            <TextView
                android:id="@+id/courseName"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="10dp"
                android:text="Course Name"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:fontFamily="@font/roboto_black" />

            <TextView
                android:id="@+id/courseID"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_alignStart="@+id/courseName"
                android:layout_centerVertical="true"
                android:text="C99"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/schoolName"
                android:layout_width="262dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/courseID"
                android:text="School Name"
                android:textAlignment="center"
                android:textColor="#6E6EFF"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/polyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/courseName"
                android:layout_marginBottom="10dp"
                android:text="polyName"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/aggCOPoint"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/separator"
                android:layout_alignTop="@+id/polyName"
                android:text="99"
                android:textAlignment="center"
                android:textColor="#777799"
                android:textSize="18sp" />

            <View
                android:id="@+id/separator"
                android:layout_width="333dp"
                android:layout_height="4dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="80dp"
                android:background="#6e6eff" />

            <CheckBox
                android:id="@+id/bookmark"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@+id/aggCOPoint"
                android:layout_centerVertical="true"
                android:background="@drawable/bookmarkstatechange"
                android:button="@android:color/transparent"
                android:checked="false"
                android:cursorVisible="false" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>