<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Polytechnics">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="72dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/polysub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/polytitle"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:paddingLeft="20dp"
                android:text="located across Singapore"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/polytitle"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dp"
                android:gravity="start"
                android:paddingLeft="20dp"
                android:text="5 Polytechnics"
                android:textAlignment="textStart"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="38sp"
                app:fontFamily="@font/roboto_black" />

            <ImageButton
                android:id="@+id/btnSP"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="34dp"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="164dp"
                android:background="@android:color/transparent"
                android:contentDescription="TODO"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/logo_sp" />

            <ImageButton
                android:id="@+id/btnNP"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="231dp"
                android:layout_marginLeft="231dp"
                android:layout_marginTop="164dp"
                android:background="@android:color/transparent"
                android:contentDescription="TODO"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/logo_np" />

            <ImageButton
                android:id="@+id/btnNYP"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="34dp"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="335dp"
                android:background="@android:color/transparent"
                android:contentDescription="TODO"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/logo_nyp" />

            <ImageButton
                android:id="@+id/btnRP"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="231dp"
                android:layout_marginLeft="231dp"
                android:layout_marginTop="335dp"
                android:background="@android:color/transparent"
                android:contentDescription="TODO"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/logo_rp" />

            <ImageButton
                android:id="@+id/btnTP"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="34dp"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="514dp"
                android:background="@android:color/transparent"
                android:contentDescription="TODO"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/log_tp" />

            <Button
                android:id="@+id/btnLocation"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/btnNP"
                android:layout_alignLeft="@+id/btnNP"
                android:layout_alignTop="@+id/btnTP"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/buttonshape"
                android:padding="8dp"
                android:text="Locations"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

        </RelativeLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>